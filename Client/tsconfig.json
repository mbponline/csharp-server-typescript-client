{
  "version": "2.8.1",
  "compilerOptions": {
    "target": "es5",
    "module": "amd",
    "declaration": false,
    "noImplicitAny": false,
    "removeComments": false,
    "sourceMap": true,
    "moduleResolution": "classic"
  },
  "compileOnSave": true,
  "atom": {
    "rewriteTsconfig": true
  },
  "include": [
    "./**/*.ts"
  ],
  "exclude": [
    "./node_modules/**/*.ts",
    "./bower_components/**/*.ts"
  ]
}
